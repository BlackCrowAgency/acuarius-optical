# ────────────────
# Core del sitio
# ────────────────
NEXT_PUBLIC_SITE_URL=               # URL base del sitio (ej: https://example.com)
NEXT_PUBLIC_DEFAULT_LOCALE=         # Idioma por defecto (ej: es)
NEXT_PUBLIC_AVAILABLE_LOCALES=      # Idiomas disponibles separados por coma (ej: en,es)
NEXT_PUBLIC_SITE_NAME=              # Nombre del sitio (ej: MiLanding)

# ────────────────
# SEO / Social (opcionales)
# ────────────────
NEXT_PUBLIC_OG_IMAGE=               # URL de la imagen OG por defecto
NEXT_PUBLIC_TWITTER_HANDLE=         # Cuenta de Twitter (ej: @tuCuenta)

# ────────────────
# Revalidación / ISR
# ────────────────
REVALIDATE_SECRET=                  # Secreto para revalidación on-demand

# ────────────────
# Analytics (opcionales)
# ────────────────
ANALYTICS_PROVIDER=                 # Proveedor (noop|ga4|plausible)
NEXT_PUBLIC_ANALYTICS_ID=           # ID del tracking (depende del proveedor)

# ────────────────
# API internas (placeholders)
# ────────────────
MAILER_PROVIDER=                    # noop|resend|smtp
MAIL_FROM=                          # Dirección remitente
MAIL_TO_DEFAULT=                    # Dirección por defecto de destino

NEWSLETTER_PROVIDER=                # noop|mailchimp|resend
NEWSLETTER_API_KEY=                 # API key del proveedor
NEWSLETTER_LIST_ID=                 # Lista/listId destino

# ────────────────
# Seguridad / Rate limit / Infra (opcionales)
# ────────────────
CORS_ALLOWED_ORIGINS=               # Lista de orígenes separados por coma
RATE_LIMIT_WINDOW=                  # Ventana de tiempo en segundos (ej: 60)
RATE_LIMIT_MAX=                     # Máx requests por ventana (ej: 30)
REDIS_URL=                          # URL Redis (si se usa para rate limit/cache)

# ────────────────
# Observabilidad (opcionales)
# ────────────────
SENTRY_DSN=                         # DSN de Sentry
LOG_LEVEL=                          # debug|info|warn|error
